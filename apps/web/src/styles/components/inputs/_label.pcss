label {
  display: block;
  margin: 0.5em 0 0.125em;
  font-family: inherit;
  font-weight: var(--font-medium);
  font-size: inherit;
  font-style: normal;
  line-height: 1.5;
  text-transform: none;
  letter-spacing: 0;

  color: var(--theme-color);
  border-radius: var(--theme-border-radius);

  @media (--dark) {
    color: var(--theme-color-darkmode);
  }

