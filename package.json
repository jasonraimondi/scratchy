{
  "name": "scratchy",
  "version": "1.0.0",
  "license": "UNLICENSED",
  "private": true,
  "scripts": {
    "format": "prettier --write .",
    "check": "pnpm -r check && prettier --check .",
    "dev": "pnpm db && overmind start -D && overmind echo",
    "db": "run-s db:development db:test",
    "db:development": "pnpm --prefix libs/prisma db:migrate && pnpm --prefix libs/prisma db:seed",
    "db:test": "pnpm --prefix libs/prisma db:migrate:test"
  },
  "devDependencies": {
    "npm-run-all": "^4.1.5",
    "prettier": "^2.7.1",
    "start-server-and-test": "^1.14.0"
  }
}
