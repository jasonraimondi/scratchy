{
  "name": "@lib/prisma",
  "version": "1.0.0",
  "files": [
    "dist",
    "prisma"
  ],
  "main": "src/index.ts",
  "publishConfig": {
    "main": "dist/index.js"
  },
  "scripts": {
    "build": "tsc --build tsconfig.build.json",
    "db:seed": "dotenv -e .env.development -- ts-node prisma/seed.ts",
    "db:migrate": "dotenv -e .env.development -- prisma migrate dev",
    "db:migrate:test": "dotenv -e .env.test -- yarn prisma migrate deploy",
    "clean": "rm -rf src/generated",
    "gen": "run-s clean gen:once",
    "gen:once": "prisma generate",
    "gen:watch": "prisma generate --watch",
    "format": "prisma format && prettier --write \"prisma/**/*.(t|j)s*\""
  },
  "devDependencies": {
    "@nestjs/common": "^9.1.4",
    "@nestjs/core": "^9.1.4",
    "@nestjs/graphql": "^10.1.3",
    "@ngneat/falso": "^6.1.0",
    "@types/bcryptjs": "^2.4.2",
    "@types/node": "^18.11.0",
    "@types/uuid": "^8.3.4",
    "bcryptjs": "^2.4.3",
    "dotenv-cli": "^6.0.0",
    "graphql": "^16.6.0",
    "graphql-type-json": "^0.3.2",
    "npm-run-all": "^4.1.5",
    "prisma": "^4.4.0",
    "reflect-metadata": "^0.1.13",
    "rxjs": "^7.5.7",
    "ts-node": "^10.9.1",
    "typescript": "^4.8.4",
    "uuid": "^9.0.0"
  },
  "dependencies": {
    "@jmondi/prisma-generator-nestjs-graphql": "1.3.0",
    "@prisma/client": "^4.4.0",
    "class-validator": "0.13.2",
    "cuid": "^2.1.8",
    "prisma-joi-generator": "^0.2.0"
  }
}
